            <div class="col-md-12">
                <br />
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"> Departamentos</span>
                        <select class="form-control OneItem" id="editsldepartamento" style="width:230px;">
                            <option id="obtsl"> </option>
                            @foreach (var item in Model.listDepart)
                            {
