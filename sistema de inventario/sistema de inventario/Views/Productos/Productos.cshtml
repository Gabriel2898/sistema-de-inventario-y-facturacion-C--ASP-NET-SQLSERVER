                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-addon"> Stock Min</span>
                        <input type="number" class="form-control" id="edittxtstockmin" placeholder="0" onkeypress="return solonumeros(event);" />
                    </div>
                </div>

            </div>

